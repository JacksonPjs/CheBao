<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/biao_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ll_nor"
    android:orientation="horizontal"
    android:layout_margin="@dimen/home_margin"
    >



        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/find_item_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/banner"
                />
            <TextView
                android:id="@+id/find_item_title"
                style="@style/Home_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_find_view"
                android:text="@string/jingppin"
                android:textColor="@color/white" />
        </FrameLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_circular"
    android:orientation="vertical">

    <TextView
        style="@style/Home_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_left_round"
        android:text="项目介绍"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/home_margin_top"
        android:drawableLeft="@mipmap/tips"
        android:drawablePadding="@dimen/home_margin"
        android:text="计息规则"
        android:textColor="@color/black_home_four_larger" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_org_circular"
        android:orientation="vertical"
        android:padding="@dimen/home_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_item1_1"
            android:textColor="@color/black_home_four_midle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/details_item1_2"
            android:textColor="@color/black_home_four_midle" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/home_margin_top"
        android:drawableLeft="@mipmap/tips"
        android:drawablePadding="@dimen/home_margin"
        android:text="收益规则"
        android:textColor="@color/black_home_four_larger" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_org_circular"
        android:orientation="vertical"
        android:padding="@dimen/home_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当天计息，次日结息，锁定期后可继续享有收益"
            android:textColor="@color/black_home_four_midle" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/home_margin_top"
        android:drawableLeft="@mipmap/tips"
        android:drawablePadding="@dimen/home_margin"
        android:text="赎回规则"
        android:textColor="@color/black_home_four_larger" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_org_circular"
        android:orientation="vertical"
        android:padding="@dimen/home_margin"
        tools:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、单笔赎回最低额度为0.01元，最大额度不超过对应滴
滴宝额度"
            android:textColor="@color/black_home_four_midle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2、工作日14：30前申请赎回当天16:00前回款至账户余
额，工作日14:30后赎回的将在下一工作日16:00前回款至账户余额 "
            android:textColor="@color/black_home_four_midle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3、如遇周末节假日，赎回到账时间顺延至下一工作日 "
            android:textColor="@color/black_home_four_midle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="4、资金回款至账户余额后，您可选择再次购买理财产品"
            android:textColor="@color/black_home_four_midle" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/home_margin_top"
        android:drawableLeft="@mipmap/tips"
        android:drawablePadding="@dimen/home_margin"
        android:text="产品介绍"
        android:textColor="@color/black_home_four_larger" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_org_circular"
        android:orientation="vertical"
        android:padding="@dimen/home_margin"
        tools:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品名称：滴滴宝"
            android:textColor="@color/black_home_four_midle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="起投金额：100元"
            android:textColor="@color/black_home_four_midle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="基础利率：7.8%"
            android:textColor="@color/black_home_four_midle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/home_margin_top"
        android:drawableLeft="@mipmap/tips"
        android:drawablePadding="@dimen/home_margin"
        android:text="产品特点"
        android:textColor="@color/black_home_four_larger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_org_circular"
        android:orientation="horizontal"
        android:padding="@dimen/home_margin"
        tools:visibility="visible"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/linghuocunqu"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="灵活存取"
                android:textColor="@color/org_home_btn"
                android:textSize="@dimen/text_12_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_margin"
                android:text="@string/details_item5_1"
                android:textColor="@color/black_home_four_midle"
                android:textSize="@dimen/text_samll_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/touzijixi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="出借计息"
                android:textColor="@color/org_home_btn"
                android:textSize="@dimen/text_12_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_margin"
                android:text="随时加入，当日计息"
                android:textColor="@color/black_home_four_midle"
                android:textSize="@dimen/text_samll_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/anquanfangxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="安全放心"
                android:textColor="@color/org_home_btn"
                android:textSize="@dimen/text_12_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_margin"
                android:text="抵押物足额抵押借款"
                android:textColor="@color/black_home_four_midle"
                android:textSize="@dimen/text_samll_size" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
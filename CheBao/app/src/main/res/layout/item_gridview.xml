<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/home_margin"
    app:cardCornerRadius="@dimen/home_margin"
    app:cardElevation="@dimen/home_margin"
    >




    <ImageView
        android:id="@+id/img_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <TextView
        android:id="@+id/tv_gv"
        style="@style/Home_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_left_round"
        android:text="@string/tuijian"
        android:textColor="@color/white" />

</android.support.v7.widget.CardView>